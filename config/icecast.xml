<icecast>
  <location>Vinyl-OS</location>
  <admin>admin@localhost</admin>

  <limits>
    <clients>10</clients>
    <sources>2</sources>
    <queue-size>524288</queue-size>
    <client-timeout>30</client-timeout>
    <header-timeout>15</header-timeout>
    <source-timeout>10</source-timeout>
    <burst-size>16384</burst-size>
  </limits>

  <authentication>
    <!-- Senhas padrão - DEVEM ser alteradas via environment variables em produção -->
    <source-password>hackme</source-password>
    <relay-password>hackme</relay-password>
    <admin-user>admin</admin-user>
    <admin-password>hackme</admin-password>
  </authentication>

  <!-- Hostname para identificação do servidor -->
  <hostname>localhost</hostname>

  <!-- Listen socket - Bind em localhost apenas (segurança) -->
  <listen-socket>
    <port>8000</port>
    <bind-address>127.0.0.1</bind-address>
  </listen-socket>

  <!-- Mount Point Principal: /stream -->
  <mount>
    <mount-name>/stream</mount-name>
    <username>source</username>
    <password>hackme</password>
    <max-listeners>10</max-listeners>
    <dump-file>/tmp/dump-stream.mp3</dump-file>
    <burst-size>16384</burst-size>
    <stream-name>Vinyl Stream</stream-name>
    <stream-description>Live from turntable</stream-description>
    <stream-url>http://localhost:8000</stream-url>
    <stream-genre>Various</stream-genre>
    <bitrate>320</bitrate>
    <type>audio/mpeg</type>
    <public>0</public>
  </mount>

  <!-- Fileserve - Arquivos estáticos -->
  <fileserve>1</fileserve>

  <!-- Paths -->
  <paths>
    <basedir>/usr/share/icecast2</basedir>
    <logdir>/var/log/icecast2</logdir>
    <webroot>/usr/share/icecast2/web</webroot>
    <adminroot>/usr/share/icecast2/admin</adminroot>
    <alias source="/" destination="/status.xsl"/>
  </paths>

  <!-- Logging -->
  <logging>
    <accesslog>access.log</accesslog>
    <errorlog>error.log</errorlog>
    <loglevel>4</loglevel> <!-- 4 = debug, 3 = info, 2 = warn, 1 = error -->
    <logsize>10000</logsize> <!-- Max size of log file in kilobytes -->
  </logging>

  <!-- Security -->
  <security>
    <chroot>0</chroot>
    <changeowner>
      <user>icecast2</user>
      <group>icecast</group>
    </changeowner>
  </security>
</icecast>
