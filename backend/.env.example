# Database Configuration
DATABASE_URL="file:../data/vinyl-os.db"

# Server Configuration
PORT=3001

# Icecast2 Configuration
# IMPORTANTE: Alterar senhas padrão em produção!
ICECAST_SOURCE_PASSWORD=hackme
ICECAST_ADMIN_PASSWORD=hackme
ICECAST_HOST=localhost
ICECAST_PORT=8000
ICECAST_MOUNT_POINT=/stream

# Audio Configuration
AUDIO_DEVICE=plughw:1,0
AUDIO_SAMPLE_RATE=48000
AUDIO_CHANNELS=2
AUDIO_BIT_DEPTH=16
AUDIO_BUFFER_SIZE=2048

# Event Detection Configuration
SILENCE_THRESHOLD=-50
SILENCE_DURATION=10
CLIPPING_THRESHOLD=-3
CLIPPING_COOLDOWN=1000

# Session Configuration
# Tempo em segundos para considerar fim de sessão após silêncio
SESSION_TIMEOUT=1800

# CORS Configuration
# Origens adicionais permitidas além da rede local (separadas por vírgula)
# Exemplo: ALLOWED_ORIGINS=https://external.com,http://custom.local:8080
# Por padrão, localhost, 127.0.0.1 e IPs de rede local são sempre permitidos
ALLOWED_ORIGINS=

# Rate Limiting Configuration
# Protege contra abuso e ataques DoS
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# Discogs API Configuration (V2 - Collection Management)
# Criar app em: https://www.discogs.com/settings/developers
DISCOGS_CONSUMER_KEY=your_consumer_key
DISCOGS_CONSUMER_SECRET=your_consumer_secret

# ACRCloud Configuration (V2 - Music Recognition)
# Criar projeto em: https://console.acrcloud.com/
ACRCLOUD_HOST=identify-eu-west-1.acrcloud.com
ACRCLOUD_ACCESS_KEY=your_access_key
ACRCLOUD_ACCESS_SECRET=your_access_secret
